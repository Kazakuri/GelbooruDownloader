<Window x:Class="GelbooruDownloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gelbooru Downloader" Height="168" Width="326" ResizeMode="CanMinimize" Loaded="Window_Loaded">
    <Grid Height="121" Width="281">
        <Grid.RowDefinitions>
            <RowDefinition Height="432*" />
            <RowDefinition Height="129*" />
        </Grid.RowDefinitions>
        <Button Content=".." Height="23" HorizontalAlignment="Left" Margin="193,20,0,0" Name="cmdSelectDestination" VerticalAlignment="Top" Width="30" Click="cmdSelectDestination_Click" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="12,21,0,0" Name="txtPath" VerticalAlignment="Top" Width="175" IsReadOnly="True" />
        <Label Content="Download Directory" Height="28" HorizontalAlignment="Left" Name="lblDownloadDirectory" VerticalAlignment="Top" Width="121" FontSize="12" FontStretch="Condensed" Margin="12,0,0,0" />
        <Button Content="Download" Height="23" HorizontalAlignment="Left" Margin="193,67,0,0" Name="cmdSearch" VerticalAlignment="Top" Width="75" Click="cmdSearch_Click" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="12,68,0,0" Name="txtTags" VerticalAlignment="Top" Width="175" />
        <Label Content="Tags" Height="28" HorizontalAlignment="Left" Margin="12,48,0,0" Name="lblTags" VerticalAlignment="Top" Width="33" />
    </Grid>
</Window>
